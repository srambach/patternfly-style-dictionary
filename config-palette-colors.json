{
  "source": ["tokens/default/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "prefix": "--pf-t-",
      "files": [{
        "destination": "_tokens-palette.css",
        "format": "css/variables",
        "options": {
          "outputReferences": true
        },
        "filter": {
          "attributes": {
            "category": "color"
          }
        }
      }
    ]
    }
  }
}
